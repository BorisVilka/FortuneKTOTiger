<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        tools:context=".StartFragment" >

        <Button
            android:id="@+id/play"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#FFB300"
            android:text="PLAY"
            android:textColor="#BF360C"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38" />

        <ImageView
            android:id="@+id/sound"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/sound_off"
            app:layout_constraintBottom_toBottomOf="@+id/sounds1"
            app:layout_constraintStart_toEndOf="@+id/sounds1"
            app:layout_constraintTop_toTopOf="@+id/sounds1" />

        <Button
            android:id="@+id/privacy"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FFB300"
            android:text="PRIVACY POLICY"
            android:textColor="#BF360C"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sounds1" />

        <Button
            android:id="@+id/sounds1"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FFB300"
            android:text="SOUNDS"
            android:textColor="#BF360C"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/play" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>